<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/home_2"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listproduct"
        android:layout_width="400dp"
        android:layout_height="560dp"
        android:layout_above="@+id/btn_export"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:fontFamily="@font/segoe">

    </ListView>

    <Button
        android:id="@+id/delete"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="29dp"
        android:layout_toStartOf="@+id/btn_export"
        android:layout_toLeftOf="@+id/btn_export"
        android:background="@drawable/drawable_menu"
        android:fontFamily="@font/segoe"
        android:onClick="launchFullActivity"
        android:text="Import" />

    <Button
        android:id="@+id/btn_export"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/red"
        android:fontFamily="@font/segoe"
        android:onClick="launchOutActivity"
        android:text="export" />


</RelativeLayout>