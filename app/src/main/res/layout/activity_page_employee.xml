<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/home_2"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listzone"
        android:fontFamily="@font/segoe"
        android:layout_width="400dp"
        android:layout_height="560dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1">

    </ListView>

    <Button
        android:id="@+id/btn_addzone"
        android:fontFamily="@font/segoe"
        android:layout_width="172dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginEnd="218dp"
        android:layout_marginRight="218dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/drawable_menu"
        android:onClick="launchFullActivity"
        android:text="Import" />

    <Button
        android:id="@+id/btn_export"
        android:layout_width="172dp"
        android:layout_height="62dp"
        android:fontFamily="@font/segoe"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/red"
        android:onClick="launchOutActivity"
        android:text="export" />

    <Button
        android:id="@+id/refresh3"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="335dp"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/ic_refresh_white_24dp" />


</RelativeLayout>